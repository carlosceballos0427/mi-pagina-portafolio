---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Hero from '../components/Hero.astro';
import { ProjectGrid } from '../components/Projects';
import { projects } from '../data/projects';
import { Briefcase } from 'lucide-react';
---

<Layout title="Carlos Andrés Ceballos | Portfolio 2026">
	<main class="relative">
		<Nav />
		<Hero />
		
		<section id="proyectos" class="py-16 md:py-24 space-y-8 md:space-y-16 px-4">
			<div class="text-center space-y-3 md:space-y-4">
				<div class="flex justify-center">
					<div class="p-2 md:p-3 rounded-xl md:rounded-2xl bg-brand-primary/10 text-brand-primary">
						<Briefcase size={24} class="md:hidden" />
						<Briefcase size={32} class="hidden md:block" />
					</div>
				</div>
				<h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold">Proyectos Destacados</h2>
				<p class="text-sm md:text-base text-zinc-400 max-w-xl mx-auto px-2">
					Una selección de mis trabajos más significativos, desde soluciones de ingeniería hasta innovaciones impulsadas por IA.
				</p>
			</div>

			<ProjectGrid projects={projects} client:load />
		</section>

		<footer class="py-12 border-t border-white/5 text-center text-zinc-500 text-sm">
			<p>© 2026 Carlos Andrés Ceballos Santos. Construido con Astro, Tailwind & IA.</p>
		</footer>
	</main>
</Layout>
